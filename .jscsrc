{
  "excludeFiles": [
    "**/*.md",
    "**/*.min.js"
  ],
  "preset": "google",

  "disallowMultipleLineBreaks": false,
  "disallowMultipleVarDecl": false,
  "disallowSpacesInFunction": false,
  "disallowSpacesInFunctionDeclaration": false,
  "disallowSpacesInFunctionExpression": false,
  "disallowSpacesInAnonymousFunctionExpression": false,
  "disallowSpacesInsideObjectBrackets": false,
  "maximumLineLength": {
    "value": 100,
    "tabSize": 1,
    "allExcept": [ "functionSignature", "urlComments", "regex" ]
  },
  "requireSpacesInsideObjectBrackets": "all",
  "requireSpacesInFunction": {
    "beforeOpeningRoundBrace": true,
    "beforeOpeningCurlyBrace": true
  },
  "requireSpacesInFunctionExpression": {
    "beforeOpeningRoundBrace": true,
    "beforeOpeningCurlyBrace": true
  },
  "requireSpacesInNamedFunctionExpression": {
    "beforeOpeningRoundBrace": true,
    "beforeOpeningCurlyBrace": true
  },
  "requireCurlyBraces": [
    "else",
    "for",
    "while",
    "do",
    "try",
    "catch",
    "case",
    "default"
  ],
  "validateLineBreaks": "LF"
}
